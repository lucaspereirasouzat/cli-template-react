{
  "ts-node": {
    "swc": true
  },
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": [
      "es6",
      "es2015",
      "dom"
    ],
    "declaration": true,
    "outDir": "lib",
    "rootDir": ".",
    "baseUrl": "./",
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "paths": {
      "@/*": [
        "./src/*"
      ]
      // "@domain/*": ["./domain/*"],
      // "@factories/*": ["./factories/*"],
      // "@resources/*": ["./resources/*"],
      // "@infra/*": ["./infra/*"]
    },
  },
  "include": [
    "tests/**/*",
    "src/**/*",
    "index.ts"
  ],
  "exclude": [
    "**/node_modules/**/**",
    "dist"
  ]
}
